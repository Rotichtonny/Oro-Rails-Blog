<h3>Add a comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

<div class="form-group">
    <%= f.label:username %><br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
</div>
<div class="form-group">
    <%= f.label:body %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
</div>
<p>
    <%= f.submit({:class => 'btn btn-secondary'}) %>
</p>
<% end %>
</div>