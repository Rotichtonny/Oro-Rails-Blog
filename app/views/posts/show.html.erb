<div class="car">
    <h1><%= @post.title %></h1>
    <hr>
    <p><%= @post.body %></p>
    <hr>
    <%= link_to 'Edit Post', edit_post_path(@post), :class => 'btn btn-secondary' %>
    <%= link_to 'Delete Post', post_path(@post), 
                                method: :delete,
                                data: {confirm: 'Are you sure?'},
                                :class => 'btn btn-danger delete-right' %>
</div>
<br>
<%= render 'comments/comments' %>
<br>
<%= render 'comments/form' %>
